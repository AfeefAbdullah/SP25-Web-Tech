<div class="admin-container">
  <section class="admin-section">
    <div class="admin-header">
      <div class="header-content">
        <h2>Product Management</h2>
        <p>Manage your product catalog</p>
      </div>
      <div class="header-actions">
        <a href="/admin/products/add" class="add-product-btn">
          <i class="fas fa-plus"></i> Add New Product
        </a>
      </div>
    </div>

    <div class="table-wrapper">
      <div class="table-container">
        <table class="admin-table">
          <thead>
            <tr>
              <th class="col-product">Product</th>
              <th class="col-price">Price</th>
              <th class="col-description">Description</th>
              <th class="col-actions">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(function(product) { %>
              <tr>
                <td class="col-product">
                  <div class="product-info">
                    <div class="product-image-wrapper">
                      <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="product-image">
                    </div>
                    <span class="product-title"><%= product.title %></span>
                  </div>
                </td>
                <td class="col-price">
                  <span class="price-tag">Â£<%= product.price %></span>
                </td>
                <td class="col-description">
                  <div class="description-wrapper">
                    <%= product.description %>
                  </div>
                </td>
                <td class="col-actions">
                  <div class="action-buttons">
                    <a href="/admin/products/edit/<%= product._id %>" class="action-btn edit">
                      <i class="fas fa-edit"></i>
                      <span>Edit</span>
                    </a>
                    <form action="/admin/products/delete/<%= product._id %>" method="POST" class="delete-form">
                      <button type="submit" class="action-btn delete">
                        <i class="fas fa-trash"></i>
                        <span>Delete</span>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>

