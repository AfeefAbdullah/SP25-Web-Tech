<section class="dashboard-section">
    <div class="dashboard-container">
        <h2>Welcome to Your Dashboard</h2>
        <p class="dashboard-subtitle">Hello, <%= user.name %>!</p>
        
        <div class="dashboard-content">
            <div class="dashboard-card">
                <h3>Account Information</h3>
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <a href="#" class="dashboard-link">Edit Profile</a>
            </div>
            
            <div class="dashboard-card">
                <h3>Order History</h3>
                <p>View your recent purchases and order status</p>
                <a href="#" class="dashboard-link">View Orders</a>
            </div>
            
            <div class="dashboard-card">
                <h3>Wishlist</h3>
                <p>Items you've saved for later</p>
                <a href="#" class="dashboard-link">View Wishlist</a>
            </div>
        </div>
    </div>
</section>
