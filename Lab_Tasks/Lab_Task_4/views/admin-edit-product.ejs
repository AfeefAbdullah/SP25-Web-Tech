<div class="admin-container">
  <section class="admin-section">
    <div class="admin-header">
      <div class="header-content">
        <h2>Edit Product</h2>
        <p>Update product details in your catalog</p>
      </div>
    </div>

    <div class="form-container">
      <form action="/admin/products/edit/<%= product._id %>" method="POST" class="product-form">
        <div class="form-group">
          <label for="title">Product Title</label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            required 
            value="<%= product.title %>"
            placeholder="Enter product title"
            class="form-control"
          >
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          <div class="price-input-group">
            <div class="price-symbol">Â£</div>
            <input 
              type="number" 
              id="price" 
              name="price" 
              required 
              value="<%= product.price %>"
              step="0.01" 
              min="0" 
              class="form-control"
            >
          </div>
          <small class="form-text">Enter the price in GBP (British Pounds)</small>
        </div>

        <div class="form-group">
          <label for="description">Product Description</label>
          <textarea 
            id="description" 
            name="description" 
            required 
            placeholder="Enter product description"
            class="form-control"
            rows="4"
          ><%= product.description %></textarea>
        </div>

        <div class="form-group">
          <label for="imageUrl">Image URL</label>
          <input 
            type="url" 
            id="imageUrl" 
            name="imageUrl" 
            required 
            value="<%= product.imageUrl %>"
            placeholder="Enter image URL"
            class="form-control"
          >
          <small class="form-text">Provide a direct link to the product image</small>
        </div>

        <div class="form-actions">
          <a href="/admin/products" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Back to Products
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i>
            Update Product
          </button>
        </div>
      </form>
    </div>
  </section>
</div>

